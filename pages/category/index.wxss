.container{
  padding-top:100rpx;
}

.search{
  width:100%;
  padding: 20rpx;
  background: #ff2d4a;
  position:fixed;
  top:0;
  left:0;
  z-index:99;
  box-sizing:border-box;
}
.search-input{
  height: 60rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}
.search-input icon{
  margin-right: 10px;
}

.main{
  width:100%;
  display:flex;
  justify-content:space-bitween;
}
.menu{
  width:200rpx;
  background-color:#f5f5f5;
}
.menu .opition{
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  box-sizing:border-box;
  border-bottom:1px solid #eee;
}
.brand-list{
  flex:1;
  padding:20rpx;
}
.category{
  margin-bottom:60rpx;
}
.category .title{
  text-align:center;
  margin-bottom:60rpx;
}
.category .title text{
  margin:0 20rpx;
  color:#eee;
}
.category-list{
  display:flex;
  flex-wrap:wrap;
}
.category-item{
  width:33%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
  font-size:14px;
  color:#666;
  margin-bottom:20rpx;
}
.category-item image{
  width:120rpx;
  height:120rpx;
  margin-bottom:20rpx;
}
.menu .active{
  color:red;
  background:#fff;
  position:relative;
}
.menu .active::before{
  display:block;
  content:"";
  width:8rpx;
  height:60rpx;
  background:red;
  position:absolute;
  top:20rpx;
  left:0;
}

