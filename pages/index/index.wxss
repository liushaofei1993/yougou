.search{
  padding: 20rpx;
  background: #ff2d4a;
}
.search-input{
  height: 60rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}
.search-input icon{
  margin-right: 10px;
}
.slide-image{
  width:750rpx;
  height:340rpx;
}
 
.menu{
  display:flex;
  justify-content:space-around;
  padding:20rpx;
}
.menu image{
  width:100rpx;
  height:135rpx;
}

.floor{
  margin-top:20rpx;
}
.floor-title image{
  width:100%;
  height:60rpx;
}
.floor-content {
  padding:20rpx;
  display:flex;
  justify-content:space-between;
}
.floor-left image{
  width:232rpx;
  height:386rpx;
}
.floor-right{
  margin-left:10rpx;
  flex:1;
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
}
.floor-right image{
  width:233rpx;
  height:188rpx;
}

